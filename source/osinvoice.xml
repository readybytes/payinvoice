	<version>0.0.1</version>
	<description>COM_OSINVOICE_DESCRIPTION</description>

	<!-- Public front end files -->
	<files folder="site">
		<folder>controllers</folder>
		<folder>views</folder>
		<folder>templates</folder>
		<folder>osinvoice</folder>
		<filename>osinvoice.php</filename>
		<filename>index.html</filename>
	</files>

	<!-- Media files -->
	<media destination="com_osinvoice" folder="media">
		<folder>js</folder>
		<filename>index.html</filename>
	</media>
	
	<languages>
		<language tag="en-GB">languages/site/en-GB.com_osinvoice.ini</language>
	</languages>

<!--	<scriptfile>installscript.php</scriptfile> -->

	<!-- Runs on install -->
        <install>
	  	 	 <sql>
	           	 <file driver="mysql" charset="utf8">install/sql/install.mysql.utf8.sql</file>
	   		 </sql>
        </install>

	<!-- Administrator back-end section -->
	<administration>
		<!-- Administration menu -->
		<menu view="dashboard">COM_OSINVOICE</menu>
		<submenu>
            <menu view="config">COM_OSINVOICE_CONFIG</menu>		
			<menu view="invoice">COM_OSINVOICE_INVOICE</menu>	
 			<menu view="processor">COM_OSINVOICE_PROCESSOR</menu>		
			<menu view="transaction">COM_OSINVOICE_TRANSACTION</menu>			
			<menu view="buyer">COM_OSINVOICE_BUYER</menu>			
		</submenu>

		<!-- Back-end files -->
		<files folder="admin">
			<filename>osinvoice.php</filename>
			<filename>index.html</filename>
			<folder>controllers</folder>
			<folder>views</folder>
			<folder>templates</folder>
			<folder>install</folder>
		</files>

		<languages>
			<language tag="en-GB">languages/admin/en-GB.com_osinvoice.ini</language>
			<language tag="en-GB">languages/admin/en-GB.com_osinvoice.sys.ini</language>
		</languages>
	</administration>
</extension>
