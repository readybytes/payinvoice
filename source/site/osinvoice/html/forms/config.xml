<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset addfieldpath="/components/com_osinvoice/osinvoice/html/fields" name="config_params">
        <field 	name="currency"				 
				type="osinvoice.currencies"
				default=""
				label="COM_OSINVOICE_CONFIG_CURRENCY"
				description="COM_OSINVOICE_CONFIG_CURRENCY_DESC"				 
				required="true">
				<option value="">COM_OSINVOICE_SELECT_OPTION</option>
		</field>
	</fieldset>
        
	<fieldset name="company_details">
		<field 	name="company_name" 
				type="text"
				label="COM_OSINVOICE_CONFIG_COMPANY_NAME" 
				description="COM_OSINVOICE_CONFIG_COMPANY_NAME_DESC"
		        />
		        
        <field 	name="company_address" 
				type="textarea"
				label="COM_OSINVOICE_CONFIG_COMPANY_ADDRESS" 
				description="COM_OSINVOICE_CONFIG_COMPANY_ADDRESS_DESC"
		        />
		        
        <field 	name="company_city" 
				type="text"
				label="COM_OSINVOICE_CONFIG_COMPANY_CITY" 
				description="COM_OSINVOICE_CONFIG_COMPANY_CITY_DESC"
		        />
		        
        <field 	name="company_phone" 
				type="text"
				label="COM_OSINVOICE_CONFIG_COMPANY_PHONE" 
				description="COM_OSINVOICE_CONFIG_COMPANY_PHONE_DESC"
		        />
		        
        <field 	name="company_logo" 
				type="file"
				label="COM_OSINVOICE_CONFIG_COMPANY_LOGO" 
				description="COM_OSINVOICE_CONFIG_COMPANY_LOGO_DESC"
		        />

	</fieldset>
	
</form>
