<?xml version="1.0" encoding="UTF-8"?>
<form>

  <fieldset addfieldpath="/components/com_osinvoice/osinvoice/html/fields">

				
  		<field 	name="buyer_id" 
				type="hidden"
				default="0"
				readonly="true"
				/>
				
  		<field 	name="name" 
				type="text"
				label="COM_OSINVOICE_BUYER_NAME"
				description="COM_OSINVOICE_BUYER_NAME_DESC"	
				required="true"			 
				/>
				
		<field 	name="username" 
				type="hidden"
				default=""
				readonly="true"			 
				/>
		
		<field 	name="email" 
				type="email"
				label="COM_OSINVOICE_BUYER_EMAIL"
				description="COM_OSINVOICE_BUYER_EMAIL_DESC"
				class="validate-email"
				required="true"
				/>
				
		<field 	name="password" 
				type="password"
				class="inputbox validate-password"
				label="COM_OSINVOICE_BUYER_PASSWORD"
				description="COM_OSINVOICE_BUYER_PASSWORD_DESC"		 
				/>
				
		<field 	name="currency" 
				type="osinvoice.currencies"
				default=""
				label="COM_OSINVOICE_BUYER_CURRENCY"
				description="COM_OSINVOICE_BUYER_CURRENCY_DESC">
				<option value="">COM_OSINVOICE_SELECT_OPTION</option>
		</field>	
		
		<field 	name="address" 
				type="textarea"
				label="COM_OSINVOICE_BUYER_ADDRESS"
				description="COM_OSINVOICE_BUYER_ADDRESS_DESC" 
				/>
				
		<field 	name="city" 
				type="text"
				label="COM_OSINVOICE_BUYER_CITY"
				description="COM_OSINVOICE_BUYER_CITY_DESC"				 
				/>
		
		<field 	name="state" 
				type="text"
				label="COM_OSINVOICE_BUYER_STATE"
				description="COM_OSINVOICE_BUYER_STATE_DESC"
				/>
				
		<field 	name="country" 
				type="osinvoice.countries"
				default=""
				label="COM_OSINVOICE_BUYER_COUNTRY"
				description="COM_OSINVOICE_BUYER_COUNTRY_DESC">
				<option value="">COM_OSINVOICE_SELECT_OPTION</option>
		</field>	
				
		<field 	name="tax_number" 
				type="text"
				label="COM_OSINVOICE_BUYER_TAX_NUMBER"
				description="COM_OSINVOICE_BUYER_TAX_NUMBER_DESC"
				/>
				
		<field 	name="zipcode" 
				type="text"
				label="COM_OSINVOICE_BUYER_ZIPCODE"
				description="COM_OSINVOICE_BUYER_ZIPCODE_DESC"
				/>
		
  </fieldset>
	
</form>
